<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivMountain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/mountains"
        android:transitionName="mountain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivMountain"
        android:layout_alignBottom="@+id/ivMountain"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/ivMountain"
        android:text="It's a cool mountain"
        android:gravity="center_vertical"
        android:textStyle="italic"
        android:transitionName="mount_text"/>

</RelativeLayout>