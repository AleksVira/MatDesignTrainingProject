    <ImageView
        android:id="@+id/iv1"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:cropToPadding="true"
        android:background="@color/colorPrimaryDark1"
        app:srcCompat="@color/colorPrimary1"
        android:contentDescription="TODO"
        />

    <Button
        android:id="@+id/buttonStyle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/colorPrimary1"
        android:text="Style 1"
        android:textColor="@color/colorAccent1"
        app:layout_constraintBottom_toBottomOf="@+id/iv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv1"
        app:layout_constraintTop_toTopOf="@+id/iv1" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonStyle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv1"
        android:padding="5dp"
        android:cropToPadding="true"
        android:background="@color/colorPrimaryDark2"
        app:srcCompat="@color/colorPrimary2"
        android:contentDescription="TODO"

        />

    <Button
        android:id="@+id/buttonStyle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/colorPrimaryDark2"
        android:text="Style 2"
        android:textColor="@color/colorAccent2"
        app:layout_constraintBottom_toBottomOf="@+id/iv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv2"
        app:layout_constraintTop_toTopOf="@+id/iv2" />

</androidx.constraintlayout.widget.ConstraintLayout>