<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/sport_start"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/runners"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/runners"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"

        android:contentDescription="@string/pic_description" />

    <ImageView
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"

        android:layout_marginTop="48dp"
        android:layout_toEndOf="@+id/runners"
        android:src="@drawable/finish_pointer"
        android:contentDescription="@string/pic_description"
        />

    <ImageView
        android:id="@+id/runner_fast"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/finish"
        android:contentDescription="@string/pic_description"
        android:src="@drawable/run_fast" />

</RelativeLayout>