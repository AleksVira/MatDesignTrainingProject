<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/sport_finish"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/runners"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:rotation="30"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/pic_description"
        android:src="@drawable/runners" />

    <ImageView
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/runners"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/pic_description"
        android:src="@drawable/finish_banner" />

    <ImageView
        android:id="@+id/runner_fast"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/finish"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/pic_description"
        android:src="@drawable/winner" />

</RelativeLayout>