    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/user_input_color</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorControlNormal">@color/controlNormal</item>
        <item name="colorControlActivated">@color/controlActivated</item>
        <item name="colorControlHighlight">@color/controlHighlight</item>
    </style>
    <!--<item name="android:textColorHint">?android:colorAccent</item>-->


    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="colorControlHighlight">@color/control_highlight</item>
        <item name="colorControlActivated">@color/control_activated</item>
        <item name="colorButtonNormal">@color/control_button_normal</item>
        <item name="colorControlNormal">@color/control_normal</item>
    </style>


    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/control_button_normal</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/rounded_btn</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>



